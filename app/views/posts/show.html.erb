<div>
  <h1><%= @post.title %></h1>
  <small>Comments: <%= @post.comments_counter %>, Likes: <%= @post.likes_counter %></small>
  <p><%= @post.text %></p>
  <div>
    <% @post.comments.each do |comment |%>
    <p><strong><%= comment.user.name %></strong> <%= comment.text %></p>
    <% end %>
  </div>
</div>