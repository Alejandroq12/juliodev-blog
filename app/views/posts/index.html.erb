<div class="user-profile">
  <%= render 'shared/user_profile', user: @user %>
</div>

<div class="posts">
  <% @posts.each_with_index do |post, index|%>
    <%= link_to user_post_path(@user, post) do %>
      <%= render 'posts/post_preview', post: post, index: index, user: @user, show_comments: true, show_user_details: true, comments: post.recent_comments %>
    <% end %>
  <% end %>
  <div class="pagination">
    <button>Pagination</button>
  </div>
</div>
