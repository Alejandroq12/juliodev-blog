<h1>New post</h1>

<div id="form_errors">
     <!-- Errors will be displayed here -->
<div>
<%= form_with model: @post, url: user_posts_path(:user) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

    <div>
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <%= form.submit "Add question" %>
<% end %>